{
  "compilerOptions": {
    "lib": ["es2015", "es6", "dom", "esnext"],
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "declarationDir": "./dist/lib",
    "noImplicitAny": false,
    "target": "es2015",
    "sourceMap": false,
    "declaration": true,
    "stripInternal": true,
    "module": "umd",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "jest"],
  },
  "exclude": ["./tests", "./jest.config.ts", "./dist/"]
}
